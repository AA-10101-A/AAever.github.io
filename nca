    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const heart = document.getElementById('heart');
            heart.addEventListener('click', function() {
                const currentState = getComputedStyle(document.documentElement)
                    .getPropertyValue('--defaultAnimationState');
                
                const newState = currentState.trim() === 'running' ? 'paused' : 'running';
                document.documentElement.style.setProperty('--defaultAnimationState', newState);
            });
        });
    </script>
